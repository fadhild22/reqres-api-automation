		{
			"name": "Create User Manual",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 1. Validasi Status Code (Pastikan sesuai dengan hasilmu, 200 atau 201)\r",
							"pm.test(\"Status code harus 201 Created\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"// 2. Persiapan Data: Ambil isi JSON respon\r",
							"var jsonData = pm.response.json();\r",
							"var requestData = JSON.parse(pm.request.body.raw);\r",
							"\r",
							"pm.test(\"Nama yang tersimpan harus berupa String dan tidak kosong\", function () {\r",
							"    pm.expect(jsonData.name).to.be.a('string');\r",
							"    pm.expect(jsonData.name).to.not.be.empty;\r",
							"});\r",
							"\r",
							"pm.test(\"Job yang tersimpan harus berupa String dan tidak kosong\", function(){\r",
							"    pm.expect(jsonData.job).to.be.a('string');\r",
							"    pm.expect(jsonData.name).to.not.be.empty;\r",
							"});\r",
							"\r",
							"\r",
							"\r",
							"\r",
							"// 3. Validasi Data Statis (Value Validation)\r",
							"//pm.test(\"Nama harus sesuai dengan yang dikirim(Dinamis)\", function(){\r",
							"    //pm.expect(jsonData.name).to.eql(requestData.name);\r",
							"//});\r",
							"\r",
							"//pm.test(\"Job harus sesuai(Dinamis)\", function () {\r",
							"    //pm.expect(jsonData.job).to.eql(requestData.job);\r",
							"//});\r",
							"\r",
							"// 4. Validasi Data Dinamis (Schema/Structure Validation)\r",
							"// Kita tidak tahu ID-nya berapa (karena acak), tapi kita harus pastikan ID-nya ADA.\r",
							"pm.test(\"Harus memiliki ID\", function(){\r",
							"    pm.expect(jsonData).to.have.property(\"id\");\r",
							"});\r",
							"\r",
							"// 5. Saving ID Supaya bisa dipakai oleh request lain (PUT/DELETE)\r",
							"pm.environment.set(\"user_id\", jsonData.id);\r",
							"console.log(\"ID User berhasil disimpan: \"+ jsonData.id);"
						],
