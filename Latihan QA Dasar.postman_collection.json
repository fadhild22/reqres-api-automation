	"item": [
		{
			"name": "Get List Users",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Tes 1: Pastikan Server Merespon Sukses (200 OK)\r",
							"pm.test(\"Status Code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Tes 2: Validasi Nama User\r",
							"pm.test(\"Cek apakah user pertama adalah Michael\", function(){\r",
							"    // 1. Kita ambil dulu seluruh data JSON-nya\r",
							"    var jsonData = pm.response.json();\r",
							"\r",
							"    // 2. Kita ambil data orang pertama (urutan ke-0 di komputer)\r",
							"    // Di bahasa pemrograman, hitungan dimulai dari 0, bukan 1.\r",
							"    var orangPertama = jsonData.data[0];\r",
							"\r",
							"    // 3. Kita bandingkan (Assert)\r",
							"    pm.expect(orangPertama.first_name).to.eql(\"Michael\");\r",
							"\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
